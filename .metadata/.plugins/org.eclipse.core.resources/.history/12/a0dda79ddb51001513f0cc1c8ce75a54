#include <stdio.h>
#include <stdlib.h>

void print_missing(int arr[], int n)
{
	int i=0;
	int j;
	for(i=0; i<n; i++)
	{
		while(i<(n-1))
		{
			j = i+1;
			if((arr[j] - arr[i]) == 1)
			{
				i++;
			}
			else
			{
				((arr[i]+1) == (arr[i+1]-1)) ? printf("%d ",(arr[i])+1) : printf("%d - %d,",(arr[i])+1, (arr[i+1])-1);
				i++;
			}
		}

	}
}

int main(void)
{
	int arr[6] = {2,4,5,88,90,99};
	int n = sizeof(arr)/sizeof(arr[0]);
	print_missing(arr,n);
	return 0;
}
