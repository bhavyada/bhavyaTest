#include <stdio.h>
#include <stdlib.h>

struct node
{
	int data;
	struct node* next;
};

struct node* MergeLinkedList(struct node* a, struct node* b)
{

	struct node dummy;
	struct node* tail = &dummy;
	dummy.next = NULL;
	while(1)
	{
		if(a == NULL)
		{
			tail->next = b;
			break;
		}
		else if (b == NULL)
		{
			tail->next = a;
			break;
		}
		else if ((a != NULL) && (b!= NULL))
		{
			if (a->data <= b->data)
			{
				tail->next = a ;
				a = a->next;
			}
			else
			{
				tail->next = b;
				b = b->next;
			}
			tail = tail->next;
		}
	}
	tail->next = NULL;
	return dummy.next;
}

void Insert(struct node* head, int value)
{
	struct node* current = head;

	struct node* newnode = (struct node*)malloc(sizeof(struct node));
	newnode->data = value;
	newnode ->next = NULL;

	if (head == NULL)
	{
		head = newnode;
		current = newnode;
		current -> next = newnode ->next;
	}
	else
	{
		current->next = newnode;
		newnode->next = NULL;
		current = current-> next;

	}

}

void PrintLinkedList(struct node* newList)
{

	printf("Linked List");
	while(newList!= NULL)
	{
		printf("\t");
		printf("%d",newList->data);
		newList = newList-> next;
	}
	printf("\n");
}

int main(void)
{
	struct node* a = NULL;
	struct node* b = NULL;
	struct node* merge = NULL;

	Insert(&a, 22);
	Insert(&a, 28);
	Insert(&a, 36);

	Insert(&b, 15);
	Insert(&b, 27);
	Insert(&b, 32);

	printf("The first list is");
	PrintLinkedList(&a);
	printf("The second list is");
	PrintLinkedList(&b);
	printf("The merged list is");
	merge = MergeLinkedList(a,b);
	PrintLinkedList(&merge);

}
