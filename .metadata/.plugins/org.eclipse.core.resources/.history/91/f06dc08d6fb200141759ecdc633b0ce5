#include <stdio.h>
#include <stdlib.h>

int ArrIndexValueSame(int *arr, int size)
{
	int index = 0;
	while (index < size)
	{
		if (arr[index] == index)
		{
			return index;
		}
		else
		{
			index++;
		}
	}
	return -1;
}

int main()
{
//	int myArr[] = {-5, -1, 0, 2, 2, 5, 6};
	int myArr = NULL;
	printf("Array Index value find\n");
	printf("Index and value same at %d", ArrIndexValueSame(myArr, sizeof(myArr)/sizeof(int)));
	return 0;
}
